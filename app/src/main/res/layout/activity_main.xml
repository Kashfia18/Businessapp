<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.businessapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/business_name"
                android:src="@drawable/almadina_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/first_row_image_layout_marginBottom"
                android:layout_marginLeft="@dimen/image_layout_marginLeft"
                android:layout_marginStart="@dimen/image_layout_marginLeft"
                android:layout_marginRight="@dimen/image_layout_marginRight"
                android:layout_marginEnd="@dimen/image_layout_marginRight"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gap_between_images"
                    android:layout_marginEnd="@dimen/gap_between_images"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/restaurant_image"
                    android:src="@drawable/almadina_restaurant" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gap_between_images"
                    android:layout_marginStart="@dimen/gap_between_images"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/butcher_image"
                    android:src="@drawable/almadina_butcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/second_row_image_layout_marginBottom"
                android:layout_marginLeft="@dimen/image_layout_marginLeft"
                android:layout_marginStart="@dimen/image_layout_marginLeft"
                android:layout_marginRight="@dimen/image_layout_marginRight"
                android:layout_marginEnd="@dimen/image_layout_marginRight"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/almadina_grocery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gap_between_images"
                    android:layout_marginEnd="@dimen/gap_between_images"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/grocery_image"
                    android:src="@drawable/almadina_grocery" />

                <ImageView
                    android:id="@+id/almadina_grocery_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gap_between_images"
                    android:layout_marginStart="@dimen/gap_between_images"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/almadina_grocery_1" />

            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/hours_of_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spinner_layout_marginLeft"
            android:layout_marginStart="@dimen/spinner_layout_marginLeft"
            android:layout_marginBottom="16dp"/>

        <TextView
            style="@style/contactStyles"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:text="@string/address"
            android:onClick="showMap"
            android:contentDescription="@string/address"/>

        <TextView
            style="@style/contactStyles"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:text="@string/phone_no"
            android:onClick="dialPhoneNumber"
            android:contentDescription="@string/phone_no"/>

        <TextView
            style="@style/contactStyles"
            android:autoLink="email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:text="@string/email"
            android:contentDescription="@string/email"/>

        <TextView
            style="@style/contactStyles"
            android:autoLink="web"
            android:contentDescription="@string/web"
            android:drawableLeft="@drawable/ic_web_black_24dp"
            android:drawableStart="@drawable/ic_web_black_24dp"
            android:text="@string/web"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>