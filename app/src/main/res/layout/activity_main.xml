<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    tools:context="com.example.android.businessapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/almadina_restaurant" />
        <ImageView
            android:id="@+id/grocery_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/restaurant_image"
            android:src="@drawable/almadina_grocery_1" />
        <ImageView
            android:id="@+id/grocery_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/meat_image"
            android:src="@drawable/almadina_grocery_2" />
        <ImageView
            android:id="@+id/meat_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/restaurant_image"
            android:src="@drawable/almadina_butcher"/>

    </RelativeLayout>
</ScrollView>