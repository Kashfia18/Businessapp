<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ff000000</item>

    </style>

    <!--style for address, phone, email and web Textviews. -->
    <style name="contactStyles">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">@dimen/textSize_of_views</item>
        <item name="android:layout_marginLeft">@dimen/contacts_layout_marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/contacts_layout_marginBottom</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>

    </style>



</resources>
